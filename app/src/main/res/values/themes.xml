<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SudokuSolver" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/noto_serif_lao</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Custom Styles-->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:elevation">@dimen/general_size_0x</item>
        <item name="android:textSize">@dimen/font_size_12x</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle.Primary">
        <item name="android:textColor">@color/bright_gray</item>
        <item name="backgroundTint">@color/shadow_blue</item>
    </style>

    <style name="ButtonStyle.Secondary">
        <item name="android:textColor">@color/shadow_blue</item>
        <item name="backgroundTint">@color/bright_gray</item>
    </style>

</resources>